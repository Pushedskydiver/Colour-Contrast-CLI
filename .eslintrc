{
  "extends": "eslint-config-synacor",
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "brace-style": "off",
    "indent": [
      1,
      2
    ],
    "react/jsx-indent-props": "off",
    "react/jsx-max-props-per-line": "off"
  },
  "globals": {
    "document": true,
    "window": true,
    "localStorage": true,
    "sessionStorage": true,
    "expect": true
  }
}